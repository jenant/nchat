#include <iostream>
#include <string>
#include <sstream>
#include <iomanip>
#include <cctype>
#include <vector>

using namespace std;

int charToNumber(char c) {
    if (isalpha(c)) {
        return tolower(c) - 'a' + 1;
    }
    return 0;
}

vector<int> stringToNumbers(const string& str) {
    vector<int> numbers;
    for (char c : str) {
        numbers.push_back(charToNumber(c));
    }
    return numbers;
}

string numbersToTimestamp(const vector<int>& numbers) {
    if (numbers.size() < 3) return "00:00:00";
    
    int hh = numbers[0] % 24;
    int mm = numbers[1] % 60;
    int ss = numbers[2] % 60;
    
    ostringstream oss;
    oss << setfill('0') << setw(2) << hh << ":" << setw(2) << mm << ":" << setw(2) << ss;
    return oss.str();
}

string timestampToString(const string& timestamp) {
    int hh, mm, ss;
    char colon;
    istringstream iss(timestamp);
    iss >> hh >> colon >> mm >> colon >> ss;
    
    string result = "";
    if (hh > 0 && hh <= 26) result += ('A' + hh - 1);
    if (mm > 0 && mm <= 26) result += ('A' + mm - 1);
    if (ss > 0 && ss <= 26) result += ('A' + ss - 1);
    return result;
}
